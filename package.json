{
  "name": "dayz-ultimate-manager",
  "version": "2.0.0",
  "description": "DayZ Ultimate Manager â€” Full Control Panel for DayZ Servers",
  "type": "commonjs",
  "main": "electron/main.js",
  "scripts": {
    "backend": "node backend/mainServer.js",
    "frontend": "live-server frontend/public --port=8080",
    "dev": "concurrently \"npm run backend\" \"npm run electron-dev\"",
    "electron-dev": "electron .",
    "build:win": "electron-builder --win --x64",
    "build": "electron-builder"
  },
  "author": "KingStar9991",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "child-process": "^1.0.2",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.0",
    "electron-updater": "^6.6.2",
    "express": "^4.19.2",
    "fs-extra": "^11.2.0",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "live-server": "^1.2.2"
  },
  "build": {
    "appId": "com.dayz.ultimate.manager",
    "productName": "DayZ Ultimate Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "backend/**/*",
      "frontend/**/*",
      "electron/**/*",
      "data/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
	  "build": {
    "appId": "com.dayz.ultimate.manager",
    "productName": "DayZ Ultimate Manager",
    "directories": { "output": "dist" },
    "publish":[ { "provider":"github", "owner":"KingStar9991", "repo":"DayZ-Ultimate-Manager2.0" } ],
    "files": [ "backend/**/*", "frontend/**/*", "electron/**/*", "data/**/*", "package.json" ],
    "win": { "target":"nsis", "icon":"icon.ico" },
    "nsis": { "oneClick": false, "perMachine": false, "allowToChangeInstallationDirectory": true }
  },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
